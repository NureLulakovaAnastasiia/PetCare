@page "/"
@inject NavigationManager Navigation


<PageTitle>Home</PageTitle>

<div>
    <div class="row mt-5 offset-1">
            <div class="offset-1 ms-5 mt-5 col-6">
                <div>
                    <h1 class="mb-3">Find the Best Care for Your Pet – Anytime, Anywhere!</h1>
                    <h5>
                        &emsp;Welcome to PetCare, your go-to platform for finding top-rated pet care professionals! From grooming to pet sitting, training, and more – we make it easy.

                        <br>&emsp;✅ Search & Book – Find the best services with our map and filters.
                        <br>&emsp;⭐ Verified Experts – Check reviews and portfolios before booking.
                        <br>&emsp;📅 Simple Scheduling – Manage appointments with ease.

                        <br>Give your pet the best care – start today!
                    </h5>
                </div>
                <div class="row col-8 mt-4">
                    <button class="col-5 me-2 btn btn-primary" @onclick="GoToLogin">Login/Sign Up</button>
                <button class="col-5 btn btn-outline-primary" @onclick="GoToSearch">Search</button>
                </div>
            </div>
            <div class="col-4 mt-3">
            <img src="https://png.pngtree.com/png-vector/20230808/ourmid/pngtree-pet-vector-png-image_6876031.png" style="width: 100%; height: 100%; object-fit: cover;" />
            </div>
    </div>

</div>


@code{


    public void GoToLogin()
    {
        Navigation.NavigateTo("/login");
    }

    public void GoToSearch()
    {
        Navigation.NavigateTo("/search");

    }
}
